{{#> app}}
  {{#*inline "content"}}
    {{#> header}}{{/header}}
    <div class="container">
      <div class="row">
        <div class="col px-3 py-4">
          <div class="d-flex justify-content-end">
            <a href="/admin/papers/add" class="btn btn-primary">Add</a>
          </div>
        </div>
      </div>
    </div>
    <section class="py-5">
      <div class="container">
        <ul class="row">
          {{#each viewData.papers }}
            <li class="col-12">
              <table class="table table-striped table-bordered">
                <thead class="table-dark">
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Name</th>
                  <th scope="col">Cover</th>
                  <th scope="col">Author</th>
                  <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                <!-- Example Row -->
                <tr>
                  <td>{{this.getId}}</td>
                  <td>{{this.getName}}</td>
                  <td><img src="{{this.getCoverUrl}}" alt="Cover" class="img-thumbnail" style="max-width: 100px;"></td>
                  <td>{{this.getAuthor}}</td>
                  <td>
                    <a href="/admin/papers/edit/{{this.getId}}" class="btn btn-sm btn-secondary">Edit</a>
                  </td>
                </tr>
                <!-- Repeat for other papers -->
                </tbody>
              </table>
            </li>
          {{/each}}
        </ul>
      </div>
    </section>
    {{#> footer}}{{/footer}}
  {{/inline}}
{{/app}}
